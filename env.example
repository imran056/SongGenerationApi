# Environment Variables for SongGeneration API
# Copy this file to .env and fill in your values

# Server Configuration
PORT=10000
HOST=0.0.0.0

# API Authentication (Optional)
# Uncomment and set a strong API key for production
# API_KEY=your-secret-api-key-here

# Model & Cache Configuration
TRANSFORMERS_CACHE=/opt/render/project/.cache
HF_HOME=/opt/render/project/.cache

# Hugging Face Token (if needed for private models)
# HF_TOKEN=your-hugging-face-token

# Gradio Configuration
GRADIO_SERVER_NAME=0.0.0.0
GRADIO_SERVER_PORT=10000

# Python Configuration
PYTHON_VERSION=3.9.0
PYTHONUNBUFFERED=1

# Logging
LOG_LEVEL=info

# Rate Limiting (requests per minute)
RATE_LIMIT=10
